{
  "name": "shopify-email-notification",
  "version": "0.0.8",
  "description": "shopify-email-notification is a template repository for email notifications.",
  "author": "Kazuki Yonemoto (https://dev.to/tim_yone)",
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all --parallel 'start:*'",
    "start": "npm-run-all --parallel 'start:*'",
    "start:nodemon": "nodemon",
    "start:sync": "browser-sync start --config bs-config.js",
    "unit": "jest",
    "unit:watch": "jest --watch",
    "lint": "npm-run-all eslint checkTypes",
    "lint:fix": "npm-run-all eslint:fix format",
    "checkTypes": "tsc --noEmit",
    "checkLicense": "license-checker --production",
    "format": "npm-run-all --parallel 'format:*'",
    "format:server": "prettier --write 'server/**/*.{js,ts}'",
    "format:views": "prettier --write 'views/**/*.liquid'",
    "eslint": "eslint 'server**/*.{js,ts}'",
    "eslint:fix": "eslint --fix 'server/**/*.{js,ts}'",
    "admin": "FLAG=admin ts-node tasks/opener",
    "orders": "npm-run-all --parallel 'orders:*'",
    "orders:confirmation": "FLAG=order_confirmation ts-node tasks/opener",
    "orders:edited": "FLAG=order_edited ts-node tasks/opener",
    "orders:invoice": "FLAG=order_invoice ts-node tasks/opener",
    "orders:cancelled": "FLAG=order_cancelled ts-node tasks/opener",
    "orders:refundNotification": "FLAG=refund_notification ts-node tasks/opener",
    "orders:draftOrderInvoice": "FLAG=draft_order_invoice ts-node tasks/opener",
    "orders:buyOnline": "FLAG=buy_online ts-node tasks/opener",
    "orders:abandonedCheckoutNotification": "FLAG=abandoned_checkout_notification ts-node tasks/opener",
    "orders:posExchangeReceipt": "FLAG=pos_exchange_receipt ts-node tasks/opener",
    "orders:posExchangeV2Receipt": "FLAG=pos_exchange_v2_receipt ts-node tasks/opener",
    "orders:giftCardNotification": "FLAG=gift_card_notification ts-node tasks/opener",
    "orders:failedPaymentProcessing": "FLAG=failed_payment_processing ts-node tasks/opener",
    "orders:pendingPaymentFailure": "FLAG=pending_payment_failure ts-node tasks/opener",
    "orders:pendingPaymentSuccess": "FLAG=pending_payment_success ts-node tasks/opener",
    "shipping": "npm-run-all --parallel 'shipping:*'",
    "shipping:fulfillmentRequest": "FLAG=fulfillment_request ts-node tasks/opener",
    "shipping:shippingConfirmation": "FLAG=shipping_confirmation ts-node tasks/opener",
    "shipping:shippingUpdate": "FLAG=shipping_update ts-node tasks/opener",
    "shipping:shipmentDelivered": "FLAG=shipment_delivered ts-node tasks/opener",
    "localDelivery": "npm-run-all --parallel 'localDelivery:*'",
    "localDelivery:localOutForDelivery": "FLAG=local_out_for_delivery ts-node tasks/opener",
    "localDelivery:localDelivered": "FLAG=local_delivered ts-node tasks/opener",
    "localDelivery:localMissedDelivery": "FLAG=local_missed_delivery ts-node tasks/opener",
    "localPickup": "npm-run-all --parallel 'localPickup:*'",
    "localPickup:readyForPickup": "FLAG=ready_for_pickup ts-node tasks/opener",
    "localPickup:pickupReceipt": "FLAG=pickup_receipt ts-node tasks/opener",
    "customer": "npm-run-all --parallel 'customer:*'",
    "customer:customerAccountActivate": "FLAG=customer_account_activate ts-node tasks/opener",
    "customer:customerAccountWelcome": "FLAG=customer_account_welcome ts-node tasks/opener",
    "customer:customerAccountReset": "FLAG=customer_account_reset ts-node tasks/opener",
    "customer:companyContactWelcomeEmail": "FLAG=company_contact_welcome_email ts-node tasks/opener",
    "customer:contactBuyer": "FLAG=contact_buyer ts-node tasks/opener",
    "emailMarketing": "npm-run-all --parallel 'emailMarketing:*'",
    "emailMarketing:customerMarketingConfirmation": "FLAG=customer_marketing_confirmation ts-node tasks/opener",
    "returns": "npm-run-all --parallel 'returns:*'",
    "returns:returnCreated": "FLAG=return_created ts-node tasks/opener",
    "returns:returnLabelNotification": "FLAG=return_label_notification ts-node tasks/opener",
    "returns:returnRequested": "FLAG=return_requested ts-node tasks/opener",
    "returns:returnApproved": "FLAG=return_approved ts-node tasks/opener",
    "returns:returnDeclined": "FLAG=return_declined ts-node tasks/opener",
    "postInstall": "typesync"
  },
  "devDependencies": {
    "@shopify/prettier-plugin-liquid": "^1.10.0",
    "@types/browser-sync": "^2.29.1",
    "@types/eslint": "^9.6.1",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/nodemon": "^3.1.1",
    "@types/opener": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "browser-sync": "^3.0.4",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-jest": "^29.1.0",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "opener": "^1.5.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "typesync": "^0.14.3"
  },
  "dependencies": {
    "express": "^5.1.0",
    "liquidjs": "^10.24.0"
  }
}
