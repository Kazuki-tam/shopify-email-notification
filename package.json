{
  "name": "shopify-email-notification",
  "version": "0.0.1",
  "description": "shopify-email-notification is a template repository for email notifications.",
  "author": "Kazuki Yonemoto (https://dev.to/tim_yone)",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:nodemon": "nodemon",
    "start:sync": "browser-sync start --config bs-config.js",
    "unit": "jest",
    "unit:watch": "jest --watch",
    "lint": "npm-run-all eslint checkTypes checkLicense",
    "lint:fix": "npm-run-all eslint:fix format",
    "checkTypes": "tsc --noEmit",
    "checkLicense": "license-checker --production",
    "format": "prettier --write --plugin-search-dir=. 'server/**/*.{js,ts}'",
    "eslint": "eslint 'server**/*.{js,ts}'",
    "eslint:fix": "eslint --fix 'server/**/*.{js,ts}'",
    "admin": "FLAG=admin ts-node tasks/opener",
    "orders": "npm-run-all --parallel orders:*",
    "orders:confirmation": "FLAG=order_confirmation ts-node tasks/opener",
    "orders:edited": "FLAG=order_edited ts-node tasks/opener",
    "orders:invoice": "FLAG=order_invoice ts-node tasks/opener",
    "orders:cancelled": "FLAG=order_cancelled ts-node tasks/opener",
    "orders:refundNotification": "FLAG=refund_notification ts-node tasks/opener",
    "orders:draftOrderInvoice": "FLAG=draft_order_invoice ts-node tasks/opener",
    "orders:buyOnline": "FLAG=buy_online ts-node tasks/opener",
    "orders:abandonedCheckoutNotification": "FLAG=abandoned_checkout_notification ts-node tasks/opener",
    "orders:posExchangeReceipt": "FLAG=pos_exchange_receipt ts-node tasks/opener",
    "orders:posExchangeV2Receipt": "FLAG=pos_exchange_v2_receipt ts-node tasks/opener",
    "orders:giftCardNotification": "FLAG=gift_card_notification ts-node tasks/opener",
    "orders:failedPaymentProcessing": "FLAG=failed_payment_processing ts-node tasks/opener",
    "orders:pendingPaymentFailure": "FLAG=pending_payment_failure ts-node tasks/opener",
    "orders:pendingPaymentSuccess": "FLAG=pending_payment_success ts-node tasks/opener",
    "postInstall": "typesync"
  },
  "devDependencies": {
    "@types/browser-sync": "^3001.0.28-alpha",
    "@types/eslint": "^8.4.5",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/nodemon": "^1.19.2",
    "@types/opener": "^1.4.0",
    "@types/prettier": "^2.7.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "browser-sync": "^2.27.10",
    "dotenv": "^16.0.1",
    "eslint": "^8.21.0",
    "eslint-plugin-jest": "^26.7.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "opener": "^1.5.2",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "typesync": "^0.9.2"
  },
  "dependencies": {
    "express": "^4.18.1",
    "liquidjs": "^9.39.2"
  }
}
